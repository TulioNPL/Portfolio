@if(curso != null){
    <div class="col-lg-12 description curso">

        <!-- First Row -->
        <div class="row">
            <div class="col-lg-4">
                <strong>Instituição:</strong> @curso.Instituicao
            </div>
            <div class="col-lg-6">
                <strong>Curso:</strong> @curso.Nome
            </div>
            <div class="col-lg-2">
                <strong>Ano:</strong> @curso.Ano
            </div>
        </div>
        
        <!-- Second Row -->
        <div class="row row-margin">
            <div class="col-lg-12">
            <strong>Descrição:</strong>  @curso.Descricao
            </div>
        </div>

        @if(ehUltimoDaLista){
            <hr style="margin-top: 25px; height: 3px; background-color: #222729; color: #222729">
        }
    </div>
}


@code {
    [Parameter]
    public Curso? curso { get; set; }

    [Parameter]
    public bool ehUltimoDaLista { get; set; }
}